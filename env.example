# Django Environment Variables Example
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Django Settings
# Secret Key - Generate a new one for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=dev-key-change-in-production

# Debug Mode (True for development, False for production)
DEBUG=True

# Allowed Hosts (comma-separated list)
# For development: leave empty or use localhost,127.0.0.1
# For production: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For development (SQLite): leave empty or comment out
# For production (PostgreSQL): postgresql://user:password@host:port/dbname?sslmode=require
# Note: Add ?sslmode=require for cloud databases (Render, Heroku, etc.)
# This ensures both Django and database tools (like DBCode) can connect
DATABASE_URL=

# Database Schema (PostgreSQL only)
# Specify a custom schema name to use instead of the default "public" schema
# If not set, Django will use the "public" schema
# Note: The schema must exist in your database before running migrations
# Example: DB_SCHEMA=my_custom_schema
DB_SCHEMA=

# Security Settings (only used when DEBUG=False)
# Set to False if your platform doesn't support HTTPS automatically
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Superuser Creation (optional - for management command)
# SUPERUSER_EMAIL=admin@example.com
# SUPERUSER_USERNAME=admin
# SUPERUSER_PASSWORD=your-secure-password

